<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learn2crack.BookDetailsDialog"
    android:weightSum="2">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Book Details"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/dialog_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dialog_title"
        android:layout_alignRight="@id/fakeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="Book Title: "
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Author: "
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_book_title"
            android:layout_alignStart="@+id/tv_book_title" />
        <TextView
            android:id="@+id/tv_book_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Genre: "
            android:textSize="15dp"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/tv_book_author"
            android:layout_alignStart="@+id/tv_book_author" />

        <TextView
            android:id="@+id/tv_book_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Lang: "
            android:textSize="15dp"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/tv_book_genre"
            android:layout_alignStart="@+id/tv_book_author" />

        <TextView
            android:id="@+id/tv_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Price: "
            android:textSize="15dp"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/tv_book_lang"
            android:layout_alignStart="@+id/tv_book_genre" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/dialog_details"
        android:layout_alignLeft="@id/fakeView"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_title"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/d_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="Book Title"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/d_book_title"
            android:layout_below="@+id/d_book_title"
            android:layout_marginTop="20dp"
            android:text="Book Author"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d_book_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/d_book_author"
            android:layout_below="@+id/d_book_author"
            android:layout_marginTop="19dp"
            android:text="Book Genre"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d_book_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/d_book_author"
            android:layout_below="@+id/d_book_genre"
            android:layout_marginTop="19dp"
            android:text="Book Lang"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/d_book_genre"
            android:layout_below="@+id/d_book_lang"
            android:layout_marginTop="19dp"
            android:text="Book Price"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>



</RelativeLayout>
